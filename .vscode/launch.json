    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "subProcess": true,
            "justMyCode": true
        },
        {
            "name": "FastAPI",
            "justMyCode": true,
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "Libs.API.API_Generate:app",
                "--reload"
            ],
            "console": "integratedTerminal"
        }
    ]
}